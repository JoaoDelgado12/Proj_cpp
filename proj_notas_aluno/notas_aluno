#include <iostream>
#include <fstream>

using namespace std;

struct aluno{
	string nome;
	int cpf;
	float notas[4];
	bool status;
};

void menu(){ // menu das opcoes
	cout << "       Menu Principal" << endl
	<< "1 - Preencher dados do aluno"  << endl
	<< "2 - Calcular Media de todos os alunos" << endl
	<< "3 - Atualizar a situacao de acordo com as medias geradas" << endl
	<< "4 - Exibir todos os alunos Reprovados" << endl
	<< "5 - Exibir todos os alunos Aprovados" << endl
	<< "6 - Arredondar notas (alunos com media >= 6 e media < 7 ) arredondar para 7" << endl
	<< "7 - Sair" << endl;
}

int perm_case(){ // para perguntar a cada opcao se o usuario quer sair
	char resp = ' ';
	while(resp != 's' && resp != 'n'){
		cout << "A operacao finalizou. \n Quer ir ao menu? (s/n)" << endl;
		cin >> resp;
		if(resp == 's'){
			system("cls");
			return 0; // retorna 0 para opcao
		}else if(resp == 'n'){
			system("cls");
			return 7; // retorna 7 para opcao, ou seja, para sair do programa
		}else{
			cout << "Entrada invalida! \n Escreva (s) ou (n)"; 
			system("pause");
			system("cls");
		}
	}
	return 0;
}

int main(){
	bool perm = 1;
	int opcao = 0;
	while(perm){
		switch(opcao){
			case 0:{
				menu();
				cin >> opcao;
				break;
			}
			case 1:{
				
				break;
			}
		}
	}
}












