#include <iostream>

using namespace std;

struct aluno{
	string nome;
	int cpf;
	float notas[4];
	bool status;
};

void menu(){
	cout << "       Menu Principal" << endl
	<< "1 - Preencher dados do aluno (Nao pode calcular media, nem status)"  << endl
	<< "2 - Calcular Media de todos os alunos" << endl
	<< "3 - Atualizar a situacao de acordo com as medias geradas" << endl
	<< "4 - Exibir todos os alunos Reprovados" << endl
	<< "5 - Exibir todos os alunos Aprovados" << endl
	<< "6 - Arredondar notas (alunos com media >= 6 e media < 7 ) arredondar para 7" << endl
	<< "7 - Sair" << endl;
}

int perm_case(){
	char resp = ' ';
	cout << "A operacao finalizou. \n Quer ir ao menu? (s/n)" << endl;
	while(resp != 's' && resp != 'n'){
		cin >> resp;
		if(resp == 's'){
			system("cls");
			return 0;
		}else if(resp == 'n'){
			system("cls");
			return 7;
		}else{
			cout << "Entrada invalida! \n Escreva (s) ou (n)";
			system("pause");
			system("cls");
		}
	}
	return 0;
}

int main(){
	bool perm = 1;
	int opcao = 0;
	while(perm){
		switch(opcao){
			case 0:{
				menu();
				cin >> opcao;
				break;
			}
		}
	}
}





